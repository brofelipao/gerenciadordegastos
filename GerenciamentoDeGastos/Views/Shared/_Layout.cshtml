<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        @ViewData["Title"] -
        Expense Control
    </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/GerenciamentoDeGastos.styles.css" asp-append-version="true" />
    <link href="~/css/bootstrap5/bootstrap.min.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="~/css/select2.min.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="~/css/select2-bootstrap-5-theme.min.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="~/css/noty.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="~/css/bootstrap-datepicker3.min.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="~/css/DataTables/dataTables.bootstrap5.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="~/css/DataTables/fixedColumns.dataTables.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="~/css/DataTables/select.dataTables.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="~/css/DataTables/datatables.bundle.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="~/css/tooltipster.bundle.min.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/default.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Expense Control</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Itens do menu à esquerda -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="BankAccount" asp-action="Index">Bank Account</a>
                        </li>
                    </ul>

                    <!-- Logout totalmente à direita -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-link nav-link text-dark">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Expense Control
        </div>
    </footer>
    <script src="~/js/noty.min.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/messages_pt_BR.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/validation-custom.js" asp-append-version="true"></script>
    

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        var content = "@Url.Content("~/")";
    </script>


</body>
</html>
