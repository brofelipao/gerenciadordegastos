@using GerenciamentoDeGastos.Application.ViewModels;
@model MovementViewModel

@{
    ViewData["Title"] = "Edit Movement";
}

<div class="row">
    <form asp-action="Save" asp-controller="Movement" method="post">
        <input asp-for="Id" type="hidden" />
        <input asp-for="BankAccountId" type="hidden" />
        <input asp-for="IsInvoiced" type="hidden" />

        <div class="row">
            <div class="col-md-4">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Amount" class="form-label"></label>
                <input asp-for="Amount" class="form-control" type="number" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Type" class="form-label"></label>
                <select asp-for="Type" class="form-control">
                    <option value="R">Receipt</option>
                    <option value="C">Cost</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="DateInvoiced" class="form-label"></label>
                <input asp-for="DateInvoiced" class="form-control" />
                <span asp-validation-for="DateInvoiced" class="text-danger"></span>
            </div>

            <div class="col-md-2">
                <div class="mt-4">
                    <div class="form-check form-switch">
                        <input asp-for="IsRecurrent" class="form-check-input ml-4" type="checkbox" role="switch" />
                        <label asp-for="IsRecurrent" class="form-check-label"></label>
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                <div class="mt-4">

                    <div class="form-check form-switch">
                        <input asp-for="IsActive" class="form-check-input ml-4" type="checkbox" role="switch" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row py-5">
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>

</div>

