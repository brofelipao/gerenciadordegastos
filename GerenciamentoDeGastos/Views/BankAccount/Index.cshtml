@using GerenciamentoDeGastos.Application.ViewModels;
@model List<BankAccountViewModel>

@{
    ViewData["Title"] = "Bank Accounts";
}

<div class="row">
    <div class="container mt-4">

        <div class="row">
            <div class="mb-3">

                <a href="@Url.Action("Create")" class="btn btn-success">
                    <i class="fas fa-plus"></i> New Bank
                </a>
            </div>
        </div>

        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Bank</th>
                    <th>Agency</th>
                    <th>Account</th>
                    <th class="text-right">Balance</th>
                    <th class="text-center" style="width: 220px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model)
                {
                    <tr>
                        <td>@account.BankName</td>
                        <td>@account.Agency</td>
                        <td>@account.Account</td>
                        <td class="text-right">@account.Balance.ToString("C")</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                
                                <a href="@Url.Action("Index", "Movement", new { BankAccountId = account.Id })"
                                   class="btn btn-sm btn-info pr-5"
                                   title="Details">
                                    <i class="fas fa-eye"></i> Details
                                </a>

                                <a href="@Url.Action("Edit", new { id = account.Id })"
                                   class="btn btn-sm btn-warning pl-5"
                                   title="Edit">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

