@using GerenciamentoDeGastos.Application.ViewModels;
@model BankAccountViewModel

@{
    ViewData["Title"] = "Create Movement";
}

<div class="row">
    <form asp-action="Save" asp-controller="BankAccount" method="post">

        <div class="row">
            <div class="col-md-4">
                <label asp-for="BankName" class="form-label"></label>
                <input asp-for="BankName" class="form-control" />
                <span asp-validation-for="BankName" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Agency" class="form-label"></label>
                <input asp-for="Agency" class="form-control" />
                <span asp-validation-for="Agency" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Account" class="form-label"></label>
                <input asp-for="Account" class="form-control" />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Balance" class="form-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
        </div>

        <div class="row py-5">
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>

</div>

